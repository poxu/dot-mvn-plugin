<idea-plugin>
    <id>poxu.plugin.dot-mvn-idea-plugin</id>
    <name>Dot Mvn support for Idea</name>
    <vendor email="poxvuibr@gmail.com" url="https://github.com/poxu/dot-mvn-plugin">poxu</vendor>

    <description><![CDATA[
    Plugin to integrate Intellij Idea with jvm.config file from .mvn directory.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <project-components>
        <component>
            <implementation-class>poxu.plugin.DotMvnProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>